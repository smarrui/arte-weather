<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/item_weather_weather_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/weather_item_principal_field_font_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_weather_weather_more_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_weather_weather_detail"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/weather_item_principal_field_font_size" />

    <TextView
        android:id="@+id/label_weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/temperature"
        android:textSize="@dimen/weather_item_field_font_size"
        android:textStyle="bold"
        android:layout_below="@+id/item_weather_weather_more_detail"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/item_weather_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/weather_item_field_font_size"
        android:layout_alignTop="@+id/label_weather_temperature"
        android:layout_toRightOf="@+id/label_weather_temperature"/>

    <TextView
        android:id="@+id/label_weather_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/humidity"
        android:textSize="@dimen/weather_item_field_font_size"
        android:textStyle="bold"
        android:layout_below="@+id/label_weather_temperature"/>

    <TextView
        android:id="@+id/item_weather_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/weather_item_field_font_size"
        android:layout_alignBaseline="@+id/label_weather_humidity"
        android:layout_toRightOf="@+id/label_weather_humidity"/>

    <TextView
        android:id="@+id/label_weather_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/pressure"
        android:textSize="@dimen/weather_item_field_font_size"
        android:textStyle="bold"
        android:layout_below="@+id/label_weather_humidity"/>

    <TextView
        android:id="@+id/item_weather_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/weather_item_field_font_size"
        android:layout_alignBaseline="@+id/label_weather_pressure"
        android:layout_toRightOf="@+id/label_weather_pressure" />

    <TextView
        android:id="@+id/label_weather_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:text="@string/wind_speed"
        android:textSize="@dimen/weather_item_field_font_size"
        android:textStyle="bold"
        android:layout_below="@+id/label_weather_pressure"/>

    <TextView
        android:id="@+id/item_weather_wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textSize="@dimen/weather_item_field_font_size"
        android:layout_alignBaseline="@+id/label_weather_wind_speed"
        android:layout_toRightOf="@+id/label_weather_wind_speed" />
</RelativeLayout>